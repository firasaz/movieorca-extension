{
    "name": "Clean up movieorca page",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "A simple extension that grabs certain elements in the movie orca web page and removes unneccesary element",
    "content_scripts": [
        {
            "matches": [
                "https://*.movieorca.com/watch-movie/*",
                "https://*.movieorca.com/watch-tv/*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://*.movieorca.com/watch-movie/*",
                "https://*.movieorca.com/watch-tv/*"
            ],
            "js": [
                "subtitles.js"
            ]
        }
    ],
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}